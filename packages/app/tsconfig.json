{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      // "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@typings/*": ["src/typings/*"],
      "@api/*": ["src/api/*"]
      // "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*", "webpack/**/*"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.ts", "**/__tests__"],
  "references": [{ "path": "../shared" }]
}
