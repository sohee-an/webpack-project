{
  "extends": "@packages/typescript-config/app-web.json",
  "compilerOptions": {
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@typings/*": ["typings/*"],
      "@api/*": ["api/*"]
    }
  },
  "include": ["src/**/*", "webpack/**/*"]
}
